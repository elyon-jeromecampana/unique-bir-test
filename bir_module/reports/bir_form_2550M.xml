<?xml version="1.0" encoding='utf-8'?>
<odoo>


	<report
		id="bir_form_2550M"
		string="BIR Form 2550M"
		model="account.move"
		report_type="qweb-pdf"
		name="bir_module.form_2550M"
		file="bir_module.form_2550M"/>
	

	<template id="form_2550M">
		<t t-call='web.basic_layout'>
			<t t-foreach="docs" t-as="doc">

					<t t-set="sales" t-value="env['account.move'].month_or_quarter(doc.date)"/>
					<t t-set="purchase" t-value="env['account.move'].get_form_purchase_vat(doc.date, '2550M')"/>

					<t t-set='company' t-value="request.env['res.company'].search([('id', '=', doc.company_id.id)])"/>
					<t t-set='payor' t-value="request.env['res.partner'].search([('id', '=', company.partner_id.id)])"/>
					

					<!--image as background fluid-->
				<div class="jumbotron jumbotron-fluid" style="background-image: url('/bir_module/static/img/2550Q.jpg');  background-repeat: no-repeat; background-size: 100% 450mm; width:100%; height:450mm;">

					<!--upper container-->
				<div class="container" style="position: relative;text-align: left; color: black; top:120px; width:100%;">-->

					<div class="left" style="position: relative;bottom: 23px; left:127px;letter-spacing:16px; font-size:21px"><t t-esc="doc.date.strftime('%m %Y')"/></div>
					<div class="left" style="position: absolute; top:40px; left:81px;letter-spacing:8px; font-size:21px"><t t-esc="payor.vat"/></div>
					<div class="left" style="position: absolute; top:90px; left:49px;"><t t-esc="payor.name"/></div>
					<div class="left" style="position: absolute; top:136px; left:49px;"><small><t t-esc="payor.street + ', ' + payor.city"/></small></div>
					<div class="right" style="position: absolute; top:133px; left: 990px; letter-spacing: 9px; font-size: 20px"><t t-esc="payor.zip"/></div>
					
				</div>
								<!--lower container-->
					<div class="container" style="position:relative; text-align:left; color:black; top:285px; width:100%;">

							<div class="center" style="position: absolute; top: 10px; left: 530px;"><t t-esc="sales[1]"/></div>

							<div class="center" style="position: absolute; top: 28px; left: 530px;"><t t-esc="sales[3]"/></div>

							<div class="center" style="position: absolute; top: 47px; left: 530px;">14A</div>

							<div class="center" style="position: absolute; top: 65px; left: 530px;"><t t-esc="sales[4]"/></div>

							<div class="center" style="position: absolute; top: 83px; left: 530px;"><t t-esc="sales[5]"/></div>

							<div class="right" 	style="position: absolute; top: 10px; left: 830px;"><t t-esc="sales[0]"/></div>

							<div class="right" 	style="position: absolute; top: 29px; left: 830px;"><t t-esc="sales[2]"/></div>

							<div class="right" 	style="position: absolute; top: 83px; left: 830px;"><t t-esc="sales[6]"/></div>

						</div>
						

							<!--<t t-esc="sales"/>
							<t t-esc="purchase"/>-->
					
					
						<p style="page-break-before:always;"></p>		
				</div>			
			</t>
		</t>

	</template>
</odoo>
